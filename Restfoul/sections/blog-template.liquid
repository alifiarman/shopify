
<style>
    #blog-header{
        background-image: url('{{ section.settings.feature_img | img_url: '1900x' }}');
        background-size: cover;
        height: 40vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 14PX;
    }
    #blog-header h2 , 
    #blog-header p{
        color: #fff;
    }
    #blog .blog-box{
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 70px;
        margin-top: 30px;
    }
    #blog .blog-img{
        width: 50%;
        margin-right: 40px;
        position: relative;
    }
    #blog .blog-img h1 {
        position: absolute;
        top: -16%;
        left: 46px;
        z-index: -1;
        font-size: 75px;
        color: #a3a1a1;
    }
    #blog .blog-img img{
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    #blog .blog-des{
        width: 50%;
    }
    #blog .blog-des h4{
        font-size: 28px;
        color: #465b52;
    }
    #blog .blog-des p{
        font-size: 18px;
        line-height: 20px;
        color: #242424;
    }
    #blog .blog-des a{
        font-size: 11px;
        font-weight: 700;
        color: #000;
        position: relative;
    }
    #blog .blog-des a::after {
        content: "";
        height: 2px;
        width: 60px;
        background-color: #000;
        position: absolute;
        right: -66px;
        top: 40%;
    }
</style>


<section id="blog-header">
    <h2>#{{ blog.title }}</h2>
    <p>{{ section.settings.sub_heading }}</p>
</section>
<!--------------blog post start -------------------->
<section id="blog" class="section-p1 page-wraper">

    {% for article in blog.articles %}
        <div class="blog-box">
            <div class="blog-img">
                <img src="{{ article.image | img_url: '1900x' }}" alt="{{ article.title }}">
                <h1>{{ article.created_at | date: '%B %d, %Y' }}</h1>
            </div>
            <div class="blog-des">
                <h4>{{ article.title }}</h4>
                <p>{{ article.excerpt }}</p>
                
                <p>{{ article.author | upcase }}</p>
                <a href="{{ article.url }}">REED MORE</a>
            </div>
        </div>
    {% endfor %}

</section>


{%- schema -%}
{
    "name" : "Blog Template",
    "settings" : [
        {
            "type" : "image_picker",
            "id" : "feature_img",
            "label" : "Header Image"
        },
        {
            "type" : "text",
            "id" : "sub_heading",
            "label" : "Sub Heading",
            "default" : "Lorem ipsum dolor sit amet consectetur."
        }
    ]
}
{%- endschema -%}