
<style>
  #sm-baner{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-around;
}
#sm-baner .banner-box{
  
    {% if section.settings.frist_image != blank %}
        background-image: url("{{ section.settings.frist_image | img_url: "1900x" }}");
    {% endif %}
    
    min-width: 580px;
    height: 50vh;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    text-align: center;
    padding: 30px;
    background-position: center;
    background-size: cover;
}

#sm-baner .secend{
  
    {% if section.settings.frist_image != blank %}
        background-image: url("{{ section.settings.second_image | img_url: "1900x" }}");
    {% endif %}
    
}
#sm-baner .banner-box .secondary{
    background-color: transparent;
    border: 1px solid #fff;
    color: #fff;
}
#sm-baner .banner-box .secondary:hover{
    background-color: #088178;
    border:1px solid #088178;
}
#sm-baner h4{
    color: {{section.settings.text_color_1st}};
    font-size: 20px;
    font-weight: 400;
}
#sm-baner h2{
    color: {{section.settings.text_color_1st}};
    font-size: 28px;
    font-weight: 800;
}
#sm-baner span{
    color: {{section.settings.text_color_1st}};
    font-size: 14px;
    font-weight: 500;
    padding-bottom: 15px;
}


@media (max-width: 820px ){
   #sm-baner .banner-box{
        min-width: 100%;
        height: 30vh;
        padding: 30px;
    }
}
@media (max-width: 477px ){
   #sm-baner .banner-box {
        min-width: 100%;
        height: 40vh;
        padding: 30px;
    }
}
</style>


  
<section id="sm-baner" class="section-p1 page-wraper">
        <div class="banner-box">
            <h4>Crazy Deals</h4>
            <h2>Bye 1 Get 1 Free</h2>
            <span>Lorem ipsum dolor sit amet consectetur.</span>
            <a href="#" class="button1 normal secondary">Learn More</a> 
        </div>
        <div class="banner-box secend">
            <h4>Crazy Deals</h4>
            <h2>Bye 1 Get 1 Free</h2>
            <span>Lorem ipsum dolor sit amet consectetur.</span>
            <a href="#" class="button1 normal secondary">Learn More</a> 
        </div>
    </section>
  

{% schema %}
  {
    "name": "Offer banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "frist_image",
        "label": "Selec Frist BG Image"
      },
      {
        "type": "image_picker",
        "id": "second_image",
        "label": "Selec Second BG Image"
      },
      {
        "type" : "color",
        "id" : "text_color_1st",
        "label" : "Text Color",
        "default" : "#000"
      }
    
    ],
    "presets" : [
      {
        "name": "Offer banner"
      }
    ]
  }
{% endschema %}
