<style>

  #baner3{
    display: flex;
    align-items: center;
    justify-content: space-around;
}
#baner3 .banner-box{
  {% if section.settings.frist_image != blank  %}
    background-image: url("{{ section.settings.frist_image | img_url: "1900x" }}");
  {% else %}
    background-color: {{section.settings.frist_color}};
  {% endif %}
  
    min-width: 30%;
    height: 30vh;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    text-align: center;
    padding: 20px;
    background-position: center;
    background-size: cover;
    margin-bottom: 20px;
}
#baner3 .banner-box h2{
    color: #fff;
    font-size: 28px;
    font-weight: 800;
}
#baner3 .banner-box h3{
    color: #fff;
    font-size: 20px;
    font-weight: 400;
}
#baner3 .box2{
  {% if section.settings.secend_image != blank  %}
    background-image: url("{{ section.settings.secend_image | img_url: "1900x" }}");
  {% else %}
    background-color: {{section.settings.secend_color}};
  {% endif %}
}
#baner3 .box3{
  {% if section.settings.third_image != blank  %}
    background-image: url("{{ section.settings.third_image | img_url: "1900x" }}");
  {% else %}
    background-color:  {{section.settings.third_color}};
  {% endif %}
}


@media (max-width: 820px ){
  #baner3 {
        display: flex;
        align-items: center;
        justify-content: space-around;
        padding: 40px 40px;
    }
    #baner3 .banner-box {
        min-width: 28%;
    }
}

@media (max-width: 477px ){
  #baner3 {
        padding: 20px 20px;
    }
    #baner3{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
    }
}
</style>

<section id="baner3" class="section-p1 page-wraper">
        <div class="banner-box">
            <h2>{{ section.settings.frist_box_text | upcase }}</h2>
            <h3>{{ section.settings.frist_box_plain_text }}</h3>
        </div>
        <div class="banner-box box2">
            <h2>{{ section.settings.second_box_text | upcase }}</h2>
            <h3>{{ section.settings.second_box_plain_text }}</h3>
        </div>
        <div class="banner-box box3">
            <h2>{{ section.settings.third_box_text | upcase }}</h2>
            <h3>{{ section.settings.third_box_plain_text }}</h3>
        </div>
    </section>

    

