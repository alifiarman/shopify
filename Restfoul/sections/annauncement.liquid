<style>
  .main-acb {
    text-align: center;
    padding: {{ section.settings.pading_size }}px 0;
    background-color: {{ section.settings.bg_color }};
  }
  .main-acb span {
    font-size: {{ section.settings.font_size }}px;
    letter-spacing: 2px;
    font-weight: 500;
    color: #fff;
  }
</style>

{% if section.settings.show_announcement %}
  {% for block in section.blocks %}
    <div class="main-acb">
      <span>
        {{ block.settings.heading }}
      </span>
    </div>
  {% endfor %}
{% endif %}

{%- schema -%}
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Show announcement",
        "default": true
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#f960ff"
      }, {
        "type": "number",
        "id": "font_size",
        "label": "Font Size",
        "default": 18
      }, {
        "type": "number",
        "id": "pading_size",
        "label": "Padding",
        "default": 15
      }

    ],
    "max_blocks": 4,
    "blocks": [
      {
        "type": "content",
        "name": "Announcement",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Announcement Text",
            "default": "Announce a Offer"
          }
        ]
      }
    ]

  }
{%- endschema -%}